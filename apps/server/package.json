{
  "name": "@gallery-app/server",
  "version": "0.2.0",
  "packageManager": "yarn@3.2.3",
  "main": "build/index.js",
  "scripts": {
    "dev": "ENV=local && nodemon -w src/ --exec ts-node src/index.ts",
    "build": "tsc",
    "build:docker": "ENV=prod && yarn build && docker build -t gallery_server:$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\", ]//g') .",
    "start": "ENV=local && yarn build && node build/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.16",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
